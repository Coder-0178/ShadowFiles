{
  "name": "shadowfiles-core",
  "version": "0.0.2",
  "description": "A library for creating client-side files on a website.",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.build.json && terser -m -c --module --ecma 2024 ./dist/index.js -o ./dist/index.min.js && terser -m -c --module --ecma 2024 ./dist/sw.js -o ./dist/sw.min.js",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "service worker",
    "file server",
    "browser"
  ],
  "repository": "github:Coder-0178/ShadowFiles",
  "author": "Coder178",
  "license": "AGPL-3.0-or-later",
  "files": [
    "LICENSE",
    "package.json",
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@types/serviceworker": "^0.0.151",
    "terser": "^5.43.1"
  }
}
